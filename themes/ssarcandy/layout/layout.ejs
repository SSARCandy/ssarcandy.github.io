<%- partial('_partial/head') %>
<body>
  <%- partial('_partial/loading') %>
  <nav id="menu" <% if(is_post() || page.layout === 'aboutMe' && theme.hideMenu){ %>class="hide"<% } %> >
   <%- partial('_partial/menu') %>
  </nav>
  <main id="main">
    <%- partial('_partial/header') %>
      <% if(is_post() && theme.toc){ 
          var idx = toc(page.content, {
              class: 'post-toc',
              list_number: theme.toc.list_number
          });
      %>
      <% if (idx) { %>
          <aside class="post-widget" id="post-widget">
              <nav class="post-toc-wrap" id="post-toc">
                <h4>Contents</h4>
                <%- idx %>
              </nav>
          </aside>
      <% } %>
    <% } %>
    <div class="container body-wrap" id="body-wrap">
      <%- body %>
    </div>
  </main>
<%- partial('_partial/after-footer') %>
<%- partial('_partial/script') %>
</body>
</html>
