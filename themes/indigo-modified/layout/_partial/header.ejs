<header class="top-header" id="header">
    <div class="flex-row">
        <a href="javascript:;" class="header-icon waves-effect waves-circle waves-light on" id="menu-toggle">
          <i class="icon icon-lg material-icons">menu</i>
        </a>
        <div class="flex-col header-title ellipsis">
        <% if (is_home()) { %>
            Posts
        <% } else if (is_archive() || is_tag()) { %> 
            Archives 
        <% } else { %> 
            <%= page.title %> 
        <% } %>
        </div>
        <% if(theme.search){ %>
        <div class="search-wrap" id="search-wrap">
            <a href="javascript:;" class="header-icon waves-effect waves-circle waves-light" id="back">
                <i class="icon icon-lg material-icons">navigate_before</i>
            </a>
            <input type="text" id="key" class="search-input " autocomplete="off" placeholder="Keywords">
            <a href="javascript:;" class="header-icon waves-effect waves-circle waves-light" id="search">
                <i class="icon icon-lg material-icons">search</i>
            </a>
        </div>
        <% }%>
        <% if(theme.share){ %>
        <a href="javascript:;" class="header-icon waves-effect waves-circle waves-light" id="menu-share">
            <i class="icon icon-lg icon-share-alt"></i>
        </a>
        <% } %>
    </div>
</header>
<header class="content-header">
  <% if (page.layout !== 'aboutMe') { %>
  <div class="container">
    <h1 class="author">
        <% if (is_home()) { %>
            Posts
        <% } else if (is_archive() || is_tag()) { %> 
            Archives 
        <% } else { %> 
            <%= page.title %> 
        <% } %>
    </h1>
    <h5 class="subtitle">
        <% if (page.date && !page.noDate) { %>
            <%- partial('post/head-meta') %>
        <% } else if (page.layout === 'works') { %>
            <%- partial('works/head-meta') %>
        <% } else if (is_archive() || is_tag()) { %>
            <%- partial('archive/head-meta') %>
        <% } else { %>
            <%= config.subtitle %>
        <% } %>
    </h5>
  </div>
  <% } else { %>
      <%- partial('about/head-meta') %>
  <% } %>
</header>
