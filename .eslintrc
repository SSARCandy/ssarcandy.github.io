{
    "env": {
        "es6": true,
        "browser": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "quote-props": [
            "error",
            "consistent"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "no-console": "off",
        "no-unused-vars": "warn",
        "strict": "error"
    }
}
